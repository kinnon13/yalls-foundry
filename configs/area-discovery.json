{
  "version": "3.0",
  "lastUpdated": "2025-01-18",
  
  "areas": [
    {
      "raw": "discovery",
      "canonical": "discovery",
      "subareas": ["search", "feed"],
      "description": "Search and personalized feed"
    },
    {
      "raw": "marketplace",
      "canonical": "marketplace",
      "subareas": ["browse", "cart", "orders"],
      "description": "Browse listings, cart, and order management"
    },
    {
      "raw": "profile",
      "canonical": "profile",
      "subareas": ["public", "unclaimed", "posts"],
      "description": "Public profiles, unclaimed capture, and profile posts"
    },
    {
      "raw": "equinestats",
      "canonical": "equinestats",
      "subareas": ["public", "private"],
      "description": "Horse performance analytics (public and private owner stats)"
    },
    {
      "raw": "events",
      "canonical": "events",
      "subareas": ["catalog", "detail", "results", "draw"],
      "description": "Public event browsing, details, results, and draw"
    },
    {
      "raw": "entries",
      "canonical": "entries",
      "subareas": ["mine", "draws", "results"],
      "description": "My entries, draws, and results (entrant view)"
    },
    {
      "raw": "workspace",
      "canonical": "workspace",
      "subareas": ["dashboard", "events", "programs", "messages", "equinestats"],
      "description": "Producer workspace with KPIs, event management, programs, and messaging"
    }
  ],

  "routeAliases": {
    "/organizer/*": "/workspace/:entityId/events/*",
    "/incentives/dashboard": "/workspace/:entityId/programs",
    "/entrant": "/entries",
    "/equistats/*": "/equinestats/*",
    "/crm": "/workspace/:entityId/dashboard"
  },

  "collapsedHeads": [
    "/dashboard",
    "/search",
    "/marketplace",
    "/entities",
    "/equinestats",
    "/events",
    "/entries",
    "/workspace",
    "/feed",
    "/cart",
    "/orders"
  ],

  "routeCategories": {
    "/search": "public",
    "/marketplace": "public",
    "/entities": "public",
    "/equinestats": "public",
    "/events": "public",
    "/feed": "private",
    "/cart": "private",
    "/orders": "private",
    "/entries": "private",
    "/workspace": "workspace"
  },

  "featureFlags": {
    "live_kpis": {
      "name": "Live KPI Tiles",
      "description": "Real-time business metrics on workspace dashboard",
      "rollout": "ga"
    },
    "theme_overrides": {
      "name": "Custom Themes",
      "description": "Per-user and per-workspace theming via ThemeBroker",
      "rollout": "beta"
    },
    "nba_tray": {
      "name": "Next Best Actions",
      "description": "AI-powered action recommendations tray",
      "rollout": "beta"
    },
    "equinestats_private": {
      "name": "Private EquineStats",
      "description": "Workspace analytics for horse owners",
      "rollout": "ga"
    }
  },

  "kpiDefinitions": {
    "workspace": {
      "metrics": [
        { "id": "revenue_cents", "label": "Revenue", "format": "currency" },
        { "id": "orders", "label": "Orders", "format": "number" },
        { "id": "entries", "label": "Entries", "format": "number" },
        { "id": "views", "label": "Views", "format": "number" }
      ],
      "refreshInterval": 120
    }
  },

  "themeDefaults": {
    "brand": {
      "primary": "#3B82F6",
      "accent": "#10B981"
    },
    "surface": {
      "bg": "#0B0F14",
      "card": "#131A22"
    },
    "text": {
      "primary": "#E5E7EB",
      "muted": "#9CA3AF"
    },
    "density": {
      "scale": 1.0
    }
  },

  "nbaConfig": {
    "maxCards": 5,
    "refreshInterval": 300
  },

  "meta": {
    "sections": 10,
    "normalized": true,
    "collapsed": true,
    "notes": "Locked to 10 hard-wired sections. Profiles show posts + unclaimed capture. Workspace Home shows live KPIs via get_workspace_kpis. Programs (formerly incentives). Legacy routes aliased."
  }
}
