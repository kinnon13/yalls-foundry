{
  "areas": [
    { "canonical": "admin",     "subareas": ["audit","claims","control"] },
    { "canonical": "ai",        "subareas": ["activity","memory","policy"] },
    { "canonical": "discovery", "subareas": ["search","marketplace","public_profiles","public_events","feed"] },
    { "canonical": "dashboard", "subareas": ["home","entities","crm","listings","orders","incentives","calendar","farm_ops","messaging"] },
