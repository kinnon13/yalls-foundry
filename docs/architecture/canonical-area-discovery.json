    { "path": "/admin/*",                 "area": "admin",     "visibility": "dashboard" },
    { "path": "/ai/activity",             "area": "ai",        "visibility": "dashboard" },
    { "path": "/search",                  "area": "discovery", "visibility": "public" },
    { "path": "/marketplace/*",           "area": "discovery", "visibility": "public" },
    { "path": "/stallions/*",             "area": "discovery", "visibility": "public" },
    { "path": "/entities/*",              "area": "discovery", "visibility": "public", "notes": "public entity pages" },
    { "path": "/events/*",                "area": "discovery", "visibility": "public", "notes": "public browse/results" },
    { "path": "/feed",                    "area": "discovery", "visibility": "private", "notes": "personalized feed (auth required)" },

    { "path": "/workspace/*",             "area": "dashboard", "visibility": "dashboard", "notes": "workspace hub" },
    { "path": "/listings/*",              "area": "dashboard", "visibility": "dashboard" },
    { "path": "/incentives/*",            "area": "dashboard", "visibility": "dashboard" },
    { "path": "/farm/*",                  "area": "dashboard", "visibility": "dashboard" },
    
    { "path": "/workspace/:entityId/events/*", "area": "events", "visibility": "dashboard", "notes": "producer events (business puts on races/incentives)" },
    { "path": "/organizer/*",             "area": "events",    "visibility": "dashboard", "notes": "LEGACY ALIAS â†’ /workspace/:entityId/events/*" },
    { "path": "/entries/*",               "area": "events",    "visibility": "private", "notes": "entrant flows (rider/owner perspective)" },

    { "path": "/equistats/*",             "area": "equistats", "visibility": "public", "notes": "public + workspace analytics" },

    { "path": "/cart",                    "area": "platform",  "visibility": "private" },
    { "path": "/orders/*",                "area": "platform",  "visibility": "private", "notes": "buyer order tracking" },
    { "path": "/login",                   "area": "platform",  "visibility": "public" },
    { "path": "/profile",                 "area": "profile",   "visibility": "private", "notes": "my profile; public is /entities/:id" }
