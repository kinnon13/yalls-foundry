{
  "version": "2.1",
  "roles": ["user", "admin", "super"],
  "modules": ["shared", "meta_cortex", "conversation"],
  "workers": [
    "durable_queue",
    "ai_jobs",
    "backup",
    "retrain",
    "redteam",
    "ctm_summarizer",
    "ctm_daily",
    "ctm_reminders"
  ],
  "governance": "PROJECT_RULES.md",
  "structure_lock": "structure.lock.json",
  "capabilities": {
    "user": {
      "planning": true,
      "memory": true,
      "tools": ["calendar", "notes", "search"],
      "admin_access": false
    },
    "admin": {
      "planning": true,
      "memory": true,
      "tools": ["calendar", "notes", "search", "moderation", "analytics"],
      "admin_access": true
    },
    "super": {
      "planning": true,
      "memory": true,
      "tools": ["*"],
      "admin_access": true,
      "meta_cognitive": true,
      "self_modification": true
    }
  },
  "shared_modules": {
    "planning": ["planner", "critic", "replanner"],
    "exec": ["executor", "transaction_log", "budgets"],
    "nlp": ["intent_router", "entity_extract", "command_parser"],
    "tools": ["registry", "adapters"]
  },
  "database_tables": [
    "ai_action_ledger",
    "ai_brain_state",
    "ai_prompt_versions",
    "ai_self_model",
    "ai_jobs",
    "ai_tasks",
    "ai_questions",
    "ai_todo",
    "audit_log",
    "system_metrics",
    "ai_events",
    "ai_memory_core",
    "ai_context_cache",
    "ai_perception_log",
    "ai_conversations",
    "ai_messages",
    "ai_goals",
    "ai_goal_steps",
    "ai_bookmarks",
    "ai_context_snapshots",
    "ai_daily_reports",
    "ai_reminders"
  ],
  "edge_functions": [
    "rocker-monitor",
    "ai_health",
    "ai_eventbus"
  ],
  "features": [
    "memory_layer",
    "event_bus",
    "ctm",
    "daily_reflection"
  ]
}
